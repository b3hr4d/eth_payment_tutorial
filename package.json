{
  "name": "ic-rust-nextjs",
  "version": "2.0.0",
  "author": "b3hr4d <b3hr4d@live.com>",
  "description": "Internet Computer Rust + NextJS Template",
  "keywords": [
    "nextjs",
    "rust",
    "internet computer",
    "icp",
    "starter",
    "dfinity"
  ],
  "scripts": {
    "install:all": "(yarn -v && yarn || npm install) && npm run ic-wasm:install && npm run candid:install ",
    "candid:install": "cargo install candid-extractor",
    "ic-wasm:install": "cargo install ic-wasm",
    "build": "next build",
    "start": "next start",
    "export": "next build",
    "dev": "next dev",
    "dfx:start": "dfx start --background --clean",
    "dfx:stop": "dfx stop",
    "dfx:build": "sh ./predeploy.sh && dfx build",
    "predeploy": "sh ./predeploy.sh",
    "deploy": "dfx deploy",
    "generate": "dfx generate"
  },
  "devDependencies": {
    "@types/node": "20.11",
    "@types/react": "18.2",
    "dotenv": "16.4",
    "typescript": "5.3"
  },
  "dependencies": {
    "@ic-reactor/react": "^1.1",
    "@tanstack/query-core": "^5.24.2",
    "@tanstack/react-query": "^5.24.2",
    "@web3modal/wagmi": "^4.0",
    "next": "^14.1",
    "react": "^18.2",
    "react-dom": "^18.2",
    "viem": "^2.7.16",
    "wagmi": "^2.5.7"
  }
}
